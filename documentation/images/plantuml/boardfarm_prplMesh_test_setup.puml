@startuml
node "Switch" {
    [eth_port_DUT_WAN]
    [eth_port_host]
}

frame "Host" {
    [boardfarm] 
    [Controller]
    [bridge]
    boardfarm -> Controller : CAPIs
    bridge <- eth_host
    Controller -> bridge
}

frame "DUT" {
    [Console]
    [Agent]
    [Radio1]
    [Radio2]
    Agent -down-> Radio1 
    Agent -down-> Radio2 
    Agent -right-> WAN
} 

frame "Backhaul sniffer" {
    [ethernet_listener]
}

frame "Fronthaul sniffer" {
    [wireless_listener]
}

eth_host -- eth_port_host
WAN -- eth_port_DUT_WAN
ethernet_listener -- bridge
wireless_listener <-up- Radio1
wireless_listener <-up- Radio2
boardfarm -down- Console : UART

@enduml
